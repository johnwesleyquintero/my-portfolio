---
import Layout from '../layouts/Layout.astro';
import data from '../data/data-server.js';
const { personalInfo } = data.profile;
---

<Layout title="Page Not Found">
  <section class="min-h-screen flex items-center bg-gradient-to-b from-slate-900 to-slate-800 py-16">
    <div class="container max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-9xl font-bold bg-gradient-to-r from-rose-400 to-red-500 bg-clip-text text-transparent mb-8">404</h1>
      <p class="text-2xl text-slate-300 mb-8">Oops! The page you're looking for doesn't exist.</p>
      <a 
        href="/"
        class="inline-block px-8 py-3 bg-emerald-500 text-white rounded-lg hover:bg-emerald-400 transition-colors duration-300 text-lg"
      >
        Return Home
      </a>
      <div class="mt-12 text-slate-400">
        <p>Need help? Contact me at <a href={`mailto:${personalInfo.email}`} class="text-cyan-400 hover:text-cyan-300">{personalInfo.email}</a></p>
      </div>
    </div>
  </section>
</Layout>