---
import ThemeToggle from './ThemeToggle';
import { profile } from '../data/data-server.js';

const { personalInfo } = profile;
const navItems = [
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/ToolsPage', label: 'Amazon Tools' },
  { href: '#contact', label: 'Contact' }
];
---

<nav class="fixed top-0 w-full bg-slate-900/80 backdrop-blur z-50 border-b border-slate-800">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold text-emerald-400 hover:text-emerald-300 transition-colors">
        {personalInfo.name}
      </a>

      <div class="flex items-center space-x-6">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-slate-300 hover:text-emerald-400 transition-colors"
          >
            {item.label}
          </a>
        ))}
        <ThemeToggle client:load />
      </div>
    </div>
  </div>
</nav>

<style>
  nav {
    transition: background-color var(--transition-normal);
  }
  
  nav a {
    font-size: 1rem;
    font-weight: 500;
  }
</style>