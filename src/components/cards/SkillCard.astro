---
const { skill } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-xl font-semibold mb-3">{skill.name}</h3>
  <div class="mb-2">
    <div class="h-2 bg-gray-200 rounded-full">
      <div class="h-2 bg-blue-600 rounded-full" style={`width: ${skill.level}%`}></div>
    </div>
  </div>
  {skill.tools && (
    <div class="mt-3">
      <p class="font-medium">Tools:</p>
      <p class="text-gray-600">{skill.tools.join(', ')}</p>
    </div>
  )}
  {skill.languages && (
    <div class="mt-3">
      <p class="font-medium">Languages:</p>
      <p class="text-gray-600">{skill.languages.join(', ')}</p>
    </div>
  )}
  {skill.focus && (
    <div class="mt-3">
      <p class="font-medium">Focus:</p>
      <p class="text-gray-600">{skill.focus.join(', ')}</p>
    </div>
  )}
</div>